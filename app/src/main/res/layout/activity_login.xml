<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_blackitalic"
            android:text="Waves  Of  Food"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintLeft_toLeftOf="@id/imageView3"
            app:layout_constraintRight_toRightOf="@id/imageView3"
            app:layout_constraintTop_toBottomOf="@id/imageView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_italic"
            android:text="Delivers At Your Home"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/textView3"
            app:layout_constraintRight_toRightOf="@id/textView3"
            app:layout_constraintTop_toBottomOf="@id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_regular"
            android:text="Login To Your Account"
            android:textColor="@color/textcolor"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@id/textView4"
            app:layout_constraintRight_toRightOf="@id/textView4"
            app:layout_constraintTop_toBottomOf="@id/textView4" />

        <EditText
            android:id="@+id/email"
            android:layout_width="325dp"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittxtshape"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="15dp"
            android:elevation="5dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            app:layout_constraintLeft_toLeftOf="@id/textView5"
            app:layout_constraintRight_toRightOf="@id/textView5"
            app:layout_constraintTop_toBottomOf="@id/textView5" />

        <EditText
            android:id="@+id/password"
            android:layout_width="325dp"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittxtshape"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="15dp"
            android:elevation="5dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            app:layout_constraintLeft_toLeftOf="@id/email"
            app:layout_constraintRight_toRightOf="@id/email"
            app:layout_constraintTop_toBottomOf="@id/email" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lato_regular"
            android:text="Or"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@id/password"
            app:layout_constraintRight_toRightOf="@id/password"
            app:layout_constraintTop_toBottomOf="@id/password" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_regular"
            android:text="Continue With"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/textView6"
            app:layout_constraintRight_toRightOf="@id/textView6"
            app:layout_constraintTop_toBottomOf="@id/textView6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="152dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/whitebtngradient"
            android:drawableLeft="@drawable/facebook"
            android:paddingLeft="15dp"
            android:text="Facebook"
            android:fontFamily="@font/lato_blackitalic"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="152dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/whitebtngradient"
            android:drawableLeft="@drawable/google"
            android:paddingLeft="15dp"
            android:fontFamily="@font/lato_blackitalic"
            android:text="Google"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="152dp"
            android:layout_height="57dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_blackitalic"
            android:background="@drawable/greenbtngradient"
            android:text="Login"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <TextView
            android:id="@+id/noaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Don't Have An Account?"
            android:fontFamily="@font/lato_blackitalic"
            android:textColor="@color/textcolor"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/login"
            app:layout_constraintRight_toRightOf="@id/login"
            app:layout_constraintTop_toBottomOf="@id/login" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>